{
  "compilerOptions": {
    "target": "ESNext", // 打包的目标语法
    "module": "ESNext", // 模块转化后的格式
    "esModuleInterop": true, // 支持模块转化
    "skipLibCheck": true, // 跳过类库检测
    "forceConsistentCasingInFileNames": true, // 区分大小写
    "moduleResolution": "node", // 模块解析方式
    "jsx": "preserve", // 不转化为jxs
    "declaration": true, // 生成声明文件
    "sourceMap": true, // 生产映射文件
    "strict": true
  },
  "include": ["packages", "examples", "document", "typings"]
}
